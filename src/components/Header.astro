---
import { SITE_TITLE, SOCIAL } from '../consts';
---

<header class="header">
  <div class="header-container">
    <a href="/" class="logo">
      <span class="logo-symbol">â—ˆ</span>
      <span class="logo-name">{SITE_TITLE}</span>
    </a>
    
    <nav class="nav">
      <a href="/" class="nav-link">Home</a>
      <a href="/blog/" class="nav-link">Journal</a>
      <a href="/games/retro-cruiser/index.html" class="nav-link nav-link-accent">
        Play Game
      </a>
    </nav>

    <div class="header-actions">
      <a href="/rss.xml" class="action-link" title="RSS Feed">
        <svg viewBox="0 0 24 24" fill="currentColor" width="18" height="18">
          <path d="M6.18 15.64a2.18 2.18 0 1 1 0 4.36 2.18 2.18 0 0 1 0-4.36m12.9 4.36A15.08 15.08 0 0 0 4 4.92V8.1a11.9 11.9 0 0 1 11.9 11.9h3.18zM12.54 20A10.54 10.54 0 0 0 4 9.46v3.18a7.36 7.36 0 0 1 7.36 7.36h1.18z"/>
        </svg>
      </a>
      {SOCIAL.facebook && (
        <a href={SOCIAL.facebook} class="action-link" target="_blank" rel="noopener noreferrer" title="Facebook">
          <svg viewBox="0 0 24 24" fill="currentColor" width="18" height="18">
            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
          </svg>
        </a>
      )}
    </div>
  </div>
</header>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 100;
    background: rgba(26, 22, 20, 0.92);
    backdrop-filter: blur(12px);
    border-bottom: var(--border-subtle);
  }

  .header-container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 1rem 2rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    text-decoration: none;
    color: inherit;
  }

  .logo-symbol {
    font-size: 1.4rem;
    color: var(--accent-primary);
    transition: var(--transition-base);
  }

  .logo:hover .logo-symbol {
    color: var(--accent-highlight);
  }

  .logo-name {
    font-family: var(--font-display);
    font-weight: 600;
    font-size: 1.1rem;
    color: var(--text-primary);
    letter-spacing: -0.01em;
  }

  .nav {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .nav-link {
    font-family: var(--font-display);
    font-size: 0.9rem;
    font-weight: 500;
    padding: 0.5rem 1rem;
    color: var(--text-secondary);
    text-decoration: none;
    border-radius: var(--radius-sm);
    transition: var(--transition-fast);
  }

  .nav-link:hover {
    color: var(--text-primary);
    background: rgba(212, 165, 116, 0.08);
  }

  .nav-link-accent {
    color: var(--accent-primary);
    border: 1px solid var(--accent-tertiary);
  }

  .nav-link-accent:hover {
    background: var(--accent-primary);
    color: var(--bg-primary);
    border-color: var(--accent-primary);
  }

  .header-actions {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .action-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 38px;
    height: 38px;
    color: var(--text-muted);
    border-radius: var(--radius-sm);
    transition: var(--transition-fast);
  }

  .action-link:hover {
    color: var(--accent-primary);
    background: rgba(212, 165, 116, 0.08);
  }

  @media (max-width: 640px) {
    .header-container {
      padding: 0.75rem 1rem;
    }

    .logo-name {
      display: none;
    }

    .nav-link {
      padding: 0.5rem 0.75rem;
      font-size: 0.85rem;
    }
  }
</style>
