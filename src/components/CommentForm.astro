---
interface Props {
  postSlug: string;
}

const { postSlug } = Astro.props;
---

<div class="comment-form-container">
  <h3 class="form-title">Leave a Comment</h3>
  <form 
    id="comment-form" 
    action="/api/comment" 
    method="POST"
    class="comment-form"
  >
    <input type="hidden" name="postSlug" value={postSlug} />
    
    <!-- Honeypot field -->
    <div class="hp-field" aria-hidden="true">
      <label for="website">Website</label>
      <input type="text" name="website" id="website" tabindex="-1" autocomplete="off" />
    </div>
    
    <div class="form-row">
      <div class="form-group">
        <label for="name">Name <span class="required">*</span></label>
        <input type="text" name="name" id="name" required placeholder="Your name" />
      </div>
      
      <div class="form-group">
        <label for="email">Email <span class="optional">(private)</span></label>
        <input type="email" name="email" id="email" placeholder="your@email.com" />
      </div>
    </div>
    
    <div class="form-group">
      <label for="content">Comment <span class="required">*</span></label>
      <textarea name="content" id="content" rows="5" required placeholder="Share your thoughts..."></textarea>
    </div>
    
    <div class="form-footer">
      <button type="submit" class="btn">
        Submit Comment
      </button>
      <p class="moderation-notice">
        Comments are moderated and may take a moment to appear.
      </p>
    </div>
  </form>
  
  <div id="form-status" class="form-status" style="display: none;"></div>
</div>

<script>
  const form = document.getElementById('comment-form') as HTMLFormElement;
  const status = document.getElementById('form-status')!;
  
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(form);
    const data = Object.fromEntries(formData);
    
    // Check honeypot
    if (data.website) {
      status.textContent = 'Thank you for your submission!';
      status.className = 'form-status success';
      status.style.display = 'block';
      form.reset();
      return;
    }
    
    try {
      const response = await fetch('/api/comment', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data),
      });
      
      if (response.ok) {
        status.textContent = 'âœ“ Comment submitted! It will appear after moderation.';
        status.className = 'form-status success';
        form.reset();
      } else {
        const error = await response.json();
        status.textContent = error.message || 'Failed to submit. Please try again.';
        status.className = 'form-status error';
      }
    } catch (err) {
      status.textContent = 'Failed to submit. Please try again.';
      status.className = 'form-status error';
    }
    
    status.style.display = 'block';
  });
</script>

<style>
  .comment-form-container {
    margin-top: var(--space-xl);
    padding-top: var(--space-xl);
    border-top: var(--border-subtle);
  }

  .form-title {
    font-family: var(--font-display);
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: var(--space-lg);
  }

  .comment-form {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .hp-field {
    position: absolute;
    left: -9999px;
    opacity: 0;
    height: 0;
    overflow: hidden;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-md);
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .form-group label {
    font-family: var(--font-display);
    font-size: 0.85rem;
    font-weight: 500;
    color: var(--text-secondary);
  }

  .required {
    color: var(--accent-primary);
  }

  .optional {
    color: var(--text-muted);
    font-size: 0.75rem;
    font-weight: 400;
  }

  .form-group input,
  .form-group textarea {
    padding: 0.75rem 1rem;
    font-family: var(--font-body);
    font-size: 1rem;
    background: var(--bg-card);
    border: var(--border-subtle);
    border-radius: var(--radius-md);
    color: var(--text-primary);
    transition: var(--transition-fast);
  }

  .form-group input::placeholder,
  .form-group textarea::placeholder {
    color: var(--text-muted);
  }

  .form-group input:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--accent-tertiary);
  }

  .form-group textarea {
    resize: vertical;
    min-height: 120px;
  }

  .form-footer {
    display: flex;
    align-items: center;
    gap: var(--space-lg);
    flex-wrap: wrap;
  }

  .moderation-notice {
    font-size: 0.8rem;
    color: var(--text-muted);
    margin: 0;
  }

  .form-status {
    margin-top: var(--space-md);
    padding: var(--space-md);
    border-radius: var(--radius-md);
    font-size: 0.9rem;
  }

  .form-status.success {
    background: rgba(212, 165, 116, 0.1);
    border: 1px solid rgba(212, 165, 116, 0.25);
    color: var(--accent-primary);
  }

  .form-status.error {
    background: rgba(180, 100, 100, 0.1);
    border: 1px solid rgba(180, 100, 100, 0.25);
    color: #c88;
  }

  @media (max-width: 640px) {
    .form-row {
      grid-template-columns: 1fr;
    }
  }
</style>
