---
import { SITE_TITLE } from '../consts';

const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="footer-container">
    <div class="footer-top">
      <div class="footer-brand">
        <span class="footer-symbol">◈</span>
        <span class="footer-name">{SITE_TITLE}</span>
      </div>
      <nav class="footer-nav">
        <a href="/blog/">Journal</a>
        <a href="/games/retro-cruiser/index.html">Game</a>
        <a href="/rss.xml">RSS</a>
      </nav>
    </div>
    
    <div class="footer-bottom">
      <p class="copyright">
        © {currentYear} {SITE_TITLE}
      </p>
      <a href="https://paypal.me/ralphsmith80" class="support-link" target="_blank" rel="noopener noreferrer">
        ☕ Buy me a coffee
      </a>
      <p class="built-with">
        Crafted with <a href="https://astro.build">Astro</a>
      </p>
    </div>
  </div>
</footer>

<style>
  .footer {
    margin-top: var(--space-2xl);
    padding: var(--space-xl) var(--space-lg);
    border-top: var(--border-subtle);
    background: var(--bg-secondary);
  }

  .footer-container {
    max-width: 1100px;
    margin: 0 auto;
  }

  .footer-top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-bottom: var(--space-lg);
    border-bottom: var(--border-subtle);
    margin-bottom: var(--space-lg);
    flex-wrap: wrap;
    gap: var(--space-md);
  }

  .footer-brand {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .footer-symbol {
    color: var(--accent-tertiary);
    font-size: 1rem;
  }

  .footer-name {
    font-family: var(--font-display);
    font-weight: 600;
    font-size: 0.95rem;
    color: var(--text-primary);
  }

  .footer-nav {
    display: flex;
    gap: var(--space-lg);
  }

  .footer-nav a {
    font-family: var(--font-display);
    font-size: 0.85rem;
    color: var(--text-muted);
    text-decoration: none;
  }

  .footer-nav a:hover {
    color: var(--accent-primary);
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--space-sm);
  }

  .copyright,
  .built-with {
    font-size: 0.8rem;
    color: var(--text-muted);
    margin: 0;
  }

  .built-with a {
    color: var(--text-muted);
    text-decoration: underline;
    text-decoration-color: var(--accent-tertiary);
    text-underline-offset: 2px;
  }

  .built-with a:hover {
    color: var(--accent-primary);
  }

  .support-link {
    font-family: var(--font-display);
    font-size: 0.8rem;
    color: var(--accent-primary);
    text-decoration: none;
    padding: 0.4rem 0.8rem;
    border: 1px solid var(--accent-tertiary);
    border-radius: var(--radius-sm);
    transition: var(--transition-fast);
  }

  .support-link:hover {
    background: var(--accent-primary);
    color: var(--bg-primary);
    border-color: var(--accent-primary);
  }

  @media (max-width: 500px) {
    .footer-top,
    .footer-bottom {
      flex-direction: column;
      text-align: center;
    }
  }
</style>
