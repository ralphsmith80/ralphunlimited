---
import { SITE_TITLE } from '../consts';

const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="footer-container">
    <div class="footer-top">
      <div class="footer-brand">
        <svg class="footer-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" fill="none" width="16" height="16">
          <ellipse cx="16" cy="12" rx="10" ry="3" stroke="currentColor" stroke-width="2" fill="none"/>
          <path d="M6 12c0 8 4 14 10 14s10-6 10-14" stroke="currentColor" stroke-width="2" fill="none"/>
          <path d="M9 24l-2 4M23 24l2 4M16 26v4" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
          <path d="M12 8c0-2 1-4 1-6M16 7c0-2 0-4 0-5M20 8c0-2-1-4-1-6" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" opacity="0.7"/>
        </svg>
        <span class="footer-name">{SITE_TITLE}</span>
      </div>
      <nav class="footer-nav">
        <a href="/blog/">Journal</a>
        <a href="/games/retro-cruiser/index.html">Game</a>
        <a href="/rss.xml">RSS</a>
      </nav>
    </div>
    
    <div class="footer-bottom">
      <p class="copyright">
        © {currentYear} {SITE_TITLE}
      </p>
      <a href="https://paypal.me/ralphsmith80" class="support-link" target="_blank" rel="noopener noreferrer">
        ⚗️ Fuel the workshop
      </a>
      <p class="built-with">
        Crafted with <a href="https://astro.build">Astro</a>
      </p>
    </div>
  </div>
</footer>

<style>
  .footer {
    margin-top: var(--space-2xl);
    padding: var(--space-xl) var(--space-lg);
    border-top: var(--border-subtle);
    background: var(--bg-secondary);
  }

  .footer-container {
    max-width: 1100px;
    margin: 0 auto;
  }

  .footer-top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-bottom: var(--space-lg);
    border-bottom: var(--border-subtle);
    margin-bottom: var(--space-lg);
    flex-wrap: wrap;
    gap: var(--space-md);
  }

  .footer-brand {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .footer-icon {
    width: 16px;
    height: 16px;
    color: var(--accent-tertiary);
  }

  .footer-name {
    font-family: var(--font-display);
    font-weight: 600;
    font-size: 0.95rem;
    color: var(--text-primary);
  }

  .footer-nav {
    display: flex;
    gap: var(--space-lg);
  }

  .footer-nav a {
    font-family: var(--font-display);
    font-size: 0.85rem;
    color: var(--text-muted);
    text-decoration: none;
  }

  .footer-nav a:hover {
    color: var(--accent-primary);
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--space-sm);
  }

  .copyright,
  .built-with {
    font-size: 0.8rem;
    color: var(--text-muted);
    margin: 0;
  }

  .built-with a {
    color: var(--text-muted);
    text-decoration: underline;
    text-decoration-color: var(--accent-tertiary);
    text-underline-offset: 2px;
  }

  .built-with a:hover {
    color: var(--accent-primary);
  }

  .support-link {
    font-family: var(--font-display);
    font-size: 0.8rem;
    color: var(--accent-primary);
    text-decoration: none;
    padding: 0.4rem 0.8rem;
    border: 1px solid var(--accent-tertiary);
    border-radius: var(--radius-sm);
    transition: var(--transition-fast);
  }

  .support-link:hover {
    background: var(--accent-primary);
    color: var(--bg-primary);
    border-color: var(--accent-primary);
  }

  @media (max-width: 500px) {
    .footer-top,
    .footer-bottom {
      flex-direction: column;
      text-align: center;
    }
  }
</style>
