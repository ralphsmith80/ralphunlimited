---
import { SITE_TITLE } from '../consts';

const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="footer-container">
    <div class="footer-content">
      <div class="footer-brand">
        <span class="footer-logo">[RU]</span>
        <span class="footer-name">{SITE_TITLE}</span>
      </div>
      <p class="footer-tagline">Building games, breaking things, sharing the journey.</p>
    </div>
    
    <div class="footer-links">
      <a href="/blog/">Blog</a>
      <a href="/games/retro-cruiser/index.html">Game</a>
      <a href="/rss.xml">RSS</a>
    </div>
    
    <div class="footer-bottom">
      <p class="copyright">
        &copy; {currentYear} {SITE_TITLE}. 
        <span class="built-with">Built with <a href="https://astro.build">Astro</a></span>
      </p>
    </div>
  </div>
</footer>

<style>
  .footer {
    margin-top: var(--space-2xl);
    padding: var(--space-xl) var(--space-lg);
    border-top: var(--border-subtle);
    background: var(--bg-secondary);
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
    align-items: center;
    text-align: center;
  }

  .footer-brand {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: var(--space-xs);
  }

  .footer-logo {
    font-family: var(--font-mono);
    font-weight: 700;
    color: var(--accent-primary);
    text-shadow: 0 0 10px var(--glow-primary);
  }

  .footer-name {
    font-family: var(--font-display);
    font-weight: 600;
    color: var(--text-primary);
  }

  .footer-tagline {
    font-size: 0.875rem;
    color: var(--text-muted);
    margin: 0;
  }

  .footer-links {
    display: flex;
    gap: var(--space-lg);
  }

  .footer-links a {
    font-family: var(--font-mono);
    font-size: 0.8125rem;
    color: var(--text-secondary);
    text-decoration: none;
    transition: var(--transition-fast);
  }

  .footer-links a:hover {
    color: var(--accent-primary);
  }

  .footer-bottom {
    padding-top: var(--space-lg);
    border-top: var(--border-subtle);
    width: 100%;
  }

  .copyright {
    font-size: 0.75rem;
    color: var(--text-muted);
    margin: 0;
  }

  .built-with {
    opacity: 0.6;
  }

  .built-with a {
    color: inherit;
  }

  .built-with a:hover {
    color: var(--accent-primary);
  }
</style>
