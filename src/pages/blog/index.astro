---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Journal â€” ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="blog-main">
			<header class="blog-header">
				<h1 class="blog-title">Journal</h1>
				<p class="blog-description">
					Explorations in code, craft, and curiosity. 
					Notes from the workbench.
				</p>
			</header>

			<section class="posts-list">
				{posts.map((post, index) => (
					<article class="post-item" style={`animation-delay: ${index * 0.05}s`}>
						<time class="post-date">
							<FormattedDate date={post.data.pubDate} />
						</time>
						<div class="post-content">
							<h2 class="post-title">
								<a href={`/blog/${post.data.slug || post.id}/`}>
									{post.data.title}
								</a>
							</h2>
							<p class="post-excerpt">{post.data.description}</p>
							{post.data.categories && post.data.categories.length > 0 && (
								<div class="post-tags">
									{post.data.categories.map((cat: string) => (
										<a href={`/category/${cat}/`} class="tag">{cat}</a>
									))}
								</div>
							)}
						</div>
					</article>
				))}
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	.blog-main {
		max-width: 800px;
		margin: 0 auto;
		padding: var(--space-xl) var(--space-lg) var(--space-2xl);
	}

	.blog-header {
		margin-bottom: var(--space-xl);
		padding-bottom: var(--space-xl);
		border-bottom: var(--border-subtle);
	}

	.blog-title {
		font-size: 2.5rem;
		margin-bottom: var(--space-sm);
	}

	.blog-description {
		font-size: 1.1rem;
		color: var(--text-secondary);
		max-width: 480px;
	}

	.posts-list {
		display: flex;
		flex-direction: column;
	}

	.post-item {
		display: grid;
		grid-template-columns: 120px 1fr;
		gap: var(--space-lg);
		padding: var(--space-lg) 0;
		border-bottom: var(--border-subtle);
		animation: fade-in 0.5s ease forwards;
		opacity: 0;
	}

	.post-item:last-child {
		border-bottom: none;
	}

	.post-date {
		font-family: var(--font-mono);
		font-size: 0.8rem;
		color: var(--text-muted);
		padding-top: 0.35rem;
	}

	.post-content {
		min-width: 0;
	}

	.post-title {
		font-family: var(--font-display);
		font-size: 1.25rem;
		font-weight: 600;
		margin-bottom: var(--space-xs);
		line-height: 1.35;
	}

	.post-title a {
		color: var(--text-primary);
		text-decoration: none;
		transition: var(--transition-fast);
	}

	.post-title a:hover {
		color: var(--accent-primary);
	}

	.post-excerpt {
		font-size: 1rem;
		color: var(--text-muted);
		margin-bottom: var(--space-sm);
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}

	.post-tags {
		display: flex;
		gap: var(--space-sm);
		flex-wrap: wrap;
	}

	@media (max-width: 640px) {
		.post-item {
			grid-template-columns: 1fr;
			gap: var(--space-sm);
		}

		.post-date {
			padding-top: 0;
		}
	}
</style>
