---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';

export async function getStaticPaths() {
	const posts = await getCollection('blog');
	
	// Get all unique categories
	const categories = new Set<string>();
	posts.forEach(post => {
		post.data.categories?.forEach(cat => categories.add(cat));
	});
	
	return Array.from(categories).map(category => ({
		params: { category },
		props: { category },
	}));
}

interface Props {
	category: string;
}

const { category } = Astro.props;

// Get all posts in this category
const allPosts = await getCollection('blog');
const posts = allPosts
	.filter(post => post.data.categories?.includes(category))
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Format category name for display
const categoryNames: Record<string, string> = {
	'diy': 'DIY Projects',
	'games-cat': 'Games',
	'apps': 'Applications',
	'development': 'Development',
	'random': 'Random Thoughts',
};
const categoryTitle = categoryNames[category] || category.charAt(0).toUpperCase() + category.slice(1);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`${categoryTitle} - ${SITE_TITLE}`} description={`Posts in ${categoryTitle} category`} />
	</head>
	<body>
		<Header />
		<main class="category-main">
			<header class="category-header">
				<a href="/blog/" class="back-link">
					<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
						<path d="M19 12H5M12 19l-7-7 7-7"/>
					</svg>
					All Posts
				</a>
				<h1 class="category-title">
					<span class="title-prefix">//</span> {categoryTitle}
				</h1>
				<p class="category-count">{posts.length} post{posts.length !== 1 ? 's' : ''}</p>
			</header>

			<section class="posts-list">
				{posts.map((post, index) => (
					<article class="post-item" style={`animation-delay: ${index * 0.05}s`}>
						<div class="post-info">
							<time class="post-date">
								<FormattedDate date={post.data.pubDate} />
							</time>
							<h2 class="post-title">
								<a href={`/blog/${post.data.slug || post.id}/`}>
									{post.data.title}
								</a>
							</h2>
							{post.data.description && (
								<p class="post-excerpt">{post.data.description}</p>
							)}
						</div>
						<a href={`/blog/${post.data.slug || post.id}/`} class="post-link" aria-label={`Read ${post.data.title}`}>
							<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
								<path d="M5 12h14M12 5l7 7-7 7"/>
							</svg>
						</a>
					</article>
				))}
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	.category-main {
		max-width: 900px;
		margin: 0 auto;
		padding: var(--space-xl) var(--space-lg);
	}

	.category-header {
		margin-bottom: var(--space-xl);
		padding-bottom: var(--space-xl);
		border-bottom: var(--border-subtle);
	}

	.back-link {
		display: inline-flex;
		align-items: center;
		gap: var(--space-sm);
		font-family: var(--font-mono);
		font-size: 0.75rem;
		color: var(--text-muted);
		text-decoration: none;
		margin-bottom: var(--space-lg);
		transition: var(--transition-fast);
	}

	.back-link svg {
		width: 14px;
		height: 14px;
	}

	.back-link:hover {
		color: var(--accent-primary);
	}

	.category-title {
		font-size: clamp(2rem, 5vw, 3rem);
		margin-bottom: var(--space-sm);
		display: flex;
		align-items: center;
		gap: var(--space-sm);
	}

	.title-prefix {
		color: var(--accent-primary);
		font-family: var(--font-mono);
	}

	.category-count {
		font-family: var(--font-mono);
		font-size: 0.875rem;
		color: var(--text-muted);
		margin: 0;
	}

	.posts-list {
		display: flex;
		flex-direction: column;
		gap: var(--space-md);
	}

	.post-item {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: var(--space-lg);
		padding: var(--space-lg);
		background: var(--bg-card);
		border: var(--border-subtle);
		border-radius: var(--radius-lg);
		transition: var(--transition-base);
		animation: slide-up 0.5s ease forwards;
		opacity: 0;
	}

	.post-item:hover {
		border-color: rgba(0, 255, 163, 0.3);
		box-shadow: 0 0 30px var(--glow-primary);
		transform: translateX(8px);
	}

	.post-info {
		flex: 1;
		min-width: 0;
	}

	.post-date {
		font-family: var(--font-mono);
		font-size: 0.75rem;
		color: var(--text-muted);
		display: block;
		margin-bottom: var(--space-sm);
	}

	.post-title {
		font-size: 1.25rem;
		margin-bottom: var(--space-xs);
		line-height: 1.3;
	}

	.post-title a {
		color: var(--text-primary);
		text-decoration: none;
		transition: var(--transition-fast);
	}

	.post-item:hover .post-title a {
		color: var(--accent-primary);
	}

	.post-excerpt {
		font-size: 0.9375rem;
		color: var(--text-muted);
		margin: 0;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}

	.post-link {
		flex-shrink: 0;
		display: flex;
		align-items: center;
		justify-content: center;
		width: 48px;
		height: 48px;
		border: 1px solid var(--bg-elevated);
		border-radius: 50%;
		color: var(--text-muted);
		transition: var(--transition-fast);
	}

	.post-link svg {
		width: 20px;
		height: 20px;
		transition: transform var(--transition-fast);
	}

	.post-item:hover .post-link {
		border-color: var(--accent-primary);
		color: var(--accent-primary);
	}

	.post-item:hover .post-link svg {
		transform: translateX(3px);
	}

	@media (max-width: 640px) {
		.post-item {
			flex-direction: column;
			align-items: flex-start;
		}

		.post-link {
			display: none;
		}
	}
</style>
