---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import { SITE_TITLE } from '../../consts';

export async function getStaticPaths() {
	const posts = await getCollection('blog');
	
	// Get all unique categories
	const categories = new Set<string>();
	posts.forEach(post => {
		post.data.categories?.forEach(cat => categories.add(cat));
	});
	
	return Array.from(categories).map(category => ({
		params: { category },
		props: { category },
	}));
}

interface Props {
	category: string;
}

const { category } = Astro.props;

// Get all posts in this category
const allPosts = await getCollection('blog');
const posts = allPosts
	.filter(post => post.data.categories?.includes(category))
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Format category name for display
const categoryNames: Record<string, string> = {
	'diy': 'DIY Projects',
	'games-cat': 'Games',
	'apps': 'Applications',
	'development': 'Development',
	'random': 'Random Thoughts',
};
const categoryTitle = categoryNames[category] || category.charAt(0).toUpperCase() + category.slice(1);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`${categoryTitle} — ${SITE_TITLE}`} description={`Posts about ${categoryTitle}`} />
	</head>
	<body>
		<Header />
		<main class="category-main">
			<header class="category-header">
				<a href="/blog/" class="back-link">← All Posts</a>
				<h1 class="category-title">{categoryTitle}</h1>
				<p class="category-count">{posts.length} entr{posts.length !== 1 ? 'ies' : 'y'}</p>
			</header>

			<section class="posts-list">
				{posts.map((post, index) => (
					<article class="post-item" style={`animation-delay: ${index * 0.05}s`}>
						<time class="post-date">
							<FormattedDate date={post.data.pubDate} />
						</time>
						<div class="post-content">
							<h2 class="post-title">
								<a href={`/blog/${post.data.slug || post.id}/`}>
									{post.data.title}
								</a>
							</h2>
							{post.data.description && (
								<p class="post-excerpt">{post.data.description}</p>
							)}
						</div>
					</article>
				))}
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	.category-main {
		max-width: 800px;
		margin: 0 auto;
		padding: var(--space-xl) var(--space-lg) var(--space-2xl);
	}

	.category-header {
		margin-bottom: var(--space-xl);
		padding-bottom: var(--space-xl);
		border-bottom: var(--border-subtle);
	}

	.back-link {
		font-family: var(--font-display);
		font-size: 0.85rem;
		color: var(--text-muted);
		text-decoration: none;
		display: inline-block;
		margin-bottom: var(--space-md);
	}

	.back-link:hover {
		color: var(--accent-primary);
	}

	.category-title {
		font-size: 2rem;
		margin-bottom: var(--space-xs);
	}

	.category-count {
		font-family: var(--font-mono);
		font-size: 0.85rem;
		color: var(--text-muted);
		margin: 0;
	}

	.posts-list {
		display: flex;
		flex-direction: column;
	}

	.post-item {
		display: grid;
		grid-template-columns: 120px 1fr;
		gap: var(--space-lg);
		padding: var(--space-lg) 0;
		border-bottom: var(--border-subtle);
		animation: fade-in 0.5s ease forwards;
		opacity: 0;
	}

	.post-item:last-child {
		border-bottom: none;
	}

	.post-date {
		font-family: var(--font-mono);
		font-size: 0.8rem;
		color: var(--text-muted);
		padding-top: 0.35rem;
	}

	.post-content {
		min-width: 0;
	}

	.post-title {
		font-family: var(--font-display);
		font-size: 1.2rem;
		font-weight: 600;
		margin-bottom: var(--space-xs);
		line-height: 1.35;
	}

	.post-title a {
		color: var(--text-primary);
		text-decoration: none;
	}

	.post-title a:hover {
		color: var(--accent-primary);
	}

	.post-excerpt {
		font-size: 0.95rem;
		color: var(--text-muted);
		margin: 0;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}

	@media (max-width: 640px) {
		.post-item {
			grid-template-columns: 1fr;
			gap: var(--space-sm);
		}

		.post-date {
			padding-top: 0;
		}
	}
</style>
