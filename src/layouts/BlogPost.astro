---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import SocialShare from '../components/SocialShare.astro';
import Comments from '../components/Comments.astro';
import CommentForm from '../components/CommentForm.astro';
import { SITE_URL } from '../consts';

type Props = CollectionEntry<'blog'>['data'] & { slug: string };

const { title, description, pubDate, updatedDate, heroImage, categories, slug } = Astro.props;
const postUrl = `${SITE_URL}/${slug}/`;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>
	<body>
		<Header />
		<main class="post-main">
			<article class="post-article">
				<!-- Post Header -->
				<header class="post-header">
					<div class="post-meta">
						<time class="post-date">
							<FormattedDate date={pubDate} />
						</time>
						{categories && categories.length > 0 && (
							<div class="post-categories">
								{categories.map((cat: string) => (
									<a href={`/category/${cat}/`} class="category-tag">{cat}</a>
								))}
							</div>
						)}
					</div>
					<h1 class="post-title">{title}</h1>
					{description && (
						<p class="post-description">{description}</p>
					)}
					{updatedDate && (
						<p class="post-updated">
							Updated <FormattedDate date={updatedDate} />
						</p>
					)}
				</header>

				<!-- Hero Image -->
				{heroImage && (
					<div class="post-hero">
						<Image width={1200} height={630} src={heroImage} alt="" />
					</div>
				)}

				<!-- Post Content -->
				<div class="post-content prose">
					<slot />
				</div>

				<!-- Post Footer -->
				<footer class="post-footer">
					<SocialShare title={title} url={postUrl} />
					<Comments postSlug={slug} />
					<CommentForm postSlug={slug} />
				</footer>
			</article>

			<!-- Back to Blog -->
			<nav class="post-nav">
				<a href="/blog/" class="back-link">
					← Back to Journal
				</a>
			</nav>
		</main>
		<Footer />
	</body>
</html>

<style>
	.post-main {
		min-height: 100vh;
	}

	.post-article {
		max-width: 720px;
		margin: 0 auto;
		padding: var(--space-xl) var(--space-lg);
	}

	/* Header */
	.post-header {
		margin-bottom: var(--space-xl);
		padding-bottom: var(--space-xl);
		border-bottom: var(--border-subtle);
	}

	.post-meta {
		display: flex;
		align-items: center;
		gap: var(--space-md);
		margin-bottom: var(--space-md);
		flex-wrap: wrap;
	}

	.post-date {
		font-family: var(--font-mono);
		font-size: 0.85rem;
		color: var(--text-muted);
	}

	.post-categories {
		display: flex;
		gap: var(--space-sm);
	}

	.category-tag {
		font-family: var(--font-mono);
		font-size: 0.7rem;
		text-transform: uppercase;
		letter-spacing: 0.08em;
		padding: 0.2rem 0.6rem;
		background: rgba(212, 165, 116, 0.1);
		border-radius: var(--radius-sm);
		color: var(--accent-secondary);
		text-decoration: none;
		transition: var(--transition-fast);
	}

	.category-tag:hover {
		background: var(--accent-primary);
		color: var(--bg-primary);
	}

	.post-title {
		font-size: clamp(1.75rem, 4vw, 2.5rem);
		line-height: 1.2;
		margin-bottom: var(--space-md);
	}

	.post-description {
		font-size: 1.15rem;
		color: var(--text-secondary);
		line-height: 1.7;
	}

	.post-updated {
		font-family: var(--font-mono);
		font-size: 0.8rem;
		color: var(--text-muted);
		margin-top: var(--space-md);
	}

	/* Hero */
	.post-hero {
		margin-bottom: var(--space-xl);
		border-radius: var(--radius-lg);
		overflow: hidden;
		border: var(--border-subtle);
	}

	.post-hero img {
		display: block;
		width: 100%;
		height: auto;
	}

	/* Content */
	.post-content {
		font-size: 1.1rem;
		line-height: 1.85;
	}

	.post-content :global(h2) {
		font-family: var(--font-display);
		font-size: 1.5rem;
		margin-top: var(--space-xl);
		margin-bottom: var(--space-md);
		color: var(--text-primary);
	}

	.post-content :global(h3) {
		font-family: var(--font-display);
		font-size: 1.25rem;
		margin-top: var(--space-lg);
		margin-bottom: var(--space-sm);
		color: var(--accent-primary);
	}

	.post-content :global(p) {
		margin-bottom: var(--space-md);
		color: var(--text-secondary);
	}

	.post-content :global(strong) {
		color: var(--text-primary);
		font-weight: 600;
	}

	.post-content :global(ul),
	.post-content :global(ol) {
		margin-bottom: var(--space-md);
		padding-left: var(--space-lg);
	}

	.post-content :global(li) {
		margin-bottom: var(--space-sm);
		color: var(--text-secondary);
	}

	.post-content :global(iframe) {
		margin: var(--space-lg) 0;
		max-width: 100%;
	}

	/* Footer */
	.post-footer {
		margin-top: var(--space-xl);
		padding-top: var(--space-xl);
		border-top: var(--border-subtle);
	}

	/* Nav */
	.post-nav {
		max-width: 720px;
		margin: 0 auto;
		padding: 0 var(--space-lg) var(--space-xl);
	}

	.back-link {
		font-family: var(--font-display);
		font-size: 0.9rem;
		color: var(--text-muted);
		text-decoration: none;
		transition: var(--transition-fast);
	}

	.back-link:hover {
		color: var(--accent-primary);
	}

	@media (max-width: 640px) {
		.post-article {
			padding: var(--space-lg) var(--space-md);
		}
	}

	/* Download buttons */
	.post-content :global(a[href$=".zip"]) {
		display: inline-flex;
		align-items: center;
		gap: 0.6rem;
		padding: 0.875rem 1.5rem;
		background: linear-gradient(135deg, var(--bg-elevated) 0%, var(--bg-card) 100%);
		border: 1px solid var(--accent-tertiary);
		border-radius: var(--radius-md);
		color: var(--text-primary);
		font-family: var(--font-display);
		font-size: 0.95rem;
		font-weight: 500;
		text-decoration: none;
		transition: var(--transition-base);
		margin: var(--space-md) 0;
	}

	.post-content :global(a[href$=".zip"])::before {
		content: "↓";
		display: flex;
		align-items: center;
		justify-content: center;
		width: 28px;
		height: 28px;
		background: var(--accent-primary);
		color: var(--bg-primary);
		border-radius: var(--radius-sm);
		font-weight: 700;
		font-size: 1rem;
		transition: var(--transition-fast);
	}

	.post-content :global(a[href$=".zip"]):hover {
		border-color: var(--accent-primary);
		background: linear-gradient(135deg, var(--bg-card) 0%, var(--bg-elevated) 100%);
		transform: translateY(-2px);
		box-shadow: 0 4px 20px rgba(212, 165, 116, 0.15);
	}

	.post-content :global(a[href$=".zip"]):hover::before {
		transform: translateY(2px);
	}
</style>
